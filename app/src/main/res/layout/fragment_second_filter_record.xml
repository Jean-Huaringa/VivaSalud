<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFilterRecord">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="25dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/center_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/ic_app_name"
            android:src="@drawable/ic_viva_salud_foreground"
            app:tint="@color/blue" />


        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <LinearLayout style="@style/InputLinearLayoutStyle">

                <TextView
                    style="@style/InputTextViewStyle"
                    android:text="@string/label_nombre" />

                <com.google.android.material.textfield.TextInputLayout style="@style/MyTextInputLayoutStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputName"
                        style="@style/MyEditTextStyle"
                        android:hint="@string/hint_nombre" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout style="@style/InputLinearLayoutStyle">

                <TextView
                    style="@style/InputTextViewStyle"
                    android:text="@string/label_apellido_paterno" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/MyTextInputLayoutStyle"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputPaternalSurname"
                        style="@style/MyEditTextStyle"
                        android:hint="@string/hint_apellido_paterno" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout style="@style/InputLinearLayoutStyle">

                <TextView
                    style="@style/InputTextViewStyle"
                    android:text="@string/label_apellido_materno" />

                <com.google.android.material.textfield.TextInputLayout style="@style/MyTextInputLayoutStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputMaternalSurname"
                        style="@style/MyEditTextStyle"
                        android:hint="@string/hint_apellido_materno" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout style="@style/InputLinearLayoutStyle">

                <TextView
                    style="@style/InputTextViewStyle"
                    android:text="@string/label_sexo" />


                <com.google.android.material.textfield.TextInputLayout style="@style/MyTextInputLayoutStyle">

                    <AutoCompleteTextView
                        android:id="@+id/sexoSpinner"
                        style="@style/AutoCompleteTextStyle"
                        android:hint="@string/hint_sexo" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout style="@style/InputLinearLayoutStyle">

                <TextView
                    style="@style/InputTextViewStyle"
                    android:text="@string/label_seguro" />


                <com.google.android.material.textfield.TextInputLayout style="@style/MyTextInputLayoutStyle">

                    <AutoCompleteTextView
                        android:id="@+id/seguroSpinner"
                        style="@style/AutoCompleteTextStyle"
                        android:hint="@string/hint_seguro" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout style="@style/InputLinearLayoutStyle">

                <TextView
                    style="@style/InputTextViewStyle"
                    android:text="@string/label_pais" />


                <com.google.android.material.textfield.TextInputLayout style="@style/MyTextInputLayoutStyle">

                    <AutoCompleteTextView
                        android:id="@+id/paisSpinner"
                        style="@style/AutoCompleteTextStyle"
                        android:hint="@string/hint_pais" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout style="@style/InputLinearLayoutStyle">

                <TextView
                    style="@style/InputTextViewStyle"
                    android:text="@string/label_departamento" />


                <com.google.android.material.textfield.TextInputLayout style="@style/MyTextInputLayoutStyle">

                    <AutoCompleteTextView
                        android:id="@+id/departamentoSpinner"
                        style="@style/AutoCompleteTextStyle"
                        android:hint="@string/hint_departamento" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout style="@style/InputLinearLayoutStyle">

                <TextView
                    style="@style/InputTextViewStyle"
                    android:text="@string/label_provincia" />


                <com.google.android.material.textfield.TextInputLayout style="@style/MyTextInputLayoutStyle">

                    <AutoCompleteTextView
                        android:id="@+id/provinciaSpinner"
                        style="@style/AutoCompleteTextStyle"
                        android:hint="@string/hint_provincia" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout style="@style/InputLinearLayoutStyle">

                <TextView
                    style="@style/InputTextViewStyle"
                    android:text="@string/label_distrito" />


                <com.google.android.material.textfield.TextInputLayout style="@style/MyTextInputLayoutStyle">

                    <AutoCompleteTextView
                        android:id="@+id/distritoSpinner"
                        style="@style/AutoCompleteTextStyle"
                        android:hint="@string/hint_distrito" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout style="@style/InputLinearLayoutStyle">

                <TextView
                    style="@style/InputTextViewStyle"
                    android:text="@string/label_domicilio" />


                <com.google.android.material.textfield.TextInputLayout style="@style/MyTextInputLayoutStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/MyEditTextStyle"
                        android:hint="@string/hint_domicilio" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSiguiente"
            style="@style/MyButtonStyle"
            android:text="@string/btn_siguiente"
            app:cornerRadius="10dp" />
    </LinearLayout>
</ScrollView>